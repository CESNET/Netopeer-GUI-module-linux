{% if formConfigNtpServer is defined and formConfigNtpServer is not null %}
    <input type="text" class="text value" name="{{ formConfigNtpServer.formName ~ "[" ~ formConfigNtpServer.nameXpath ~ "]" }}" value="{{ formConfigNtpServer.nameValue }}" readonly>
    <input type="hidden" class="text hidden-value" name="{{ formConfigNtpServer.formName ~ "[nameXpath]"}}" value="{{ formConfigNtpServer.nameXpath }}">
    <input type="text" class="text value" name="{{ formConfigNtpServer.formName ~ "[" ~ formConfigNtpServer.addressXpath ~ "]" }}" value="{{ formConfigNtpServer.addressValue }}">
    <input type="hidden" class="text hidden-value" name="{{ formConfigNtpServer.formName ~ "[addressXpath]"}}" value="{{ formConfigNtpServer.addressXpath }}">
{% endif %}

