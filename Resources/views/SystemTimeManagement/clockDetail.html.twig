<div class="system-time-management-clock">  
    <h3>Config timezone</h3>
    
    <div id="clock-form">
        {% if formConfigClock is defined and formConfigClock is not null %}
            <form action="" method="post" name="{{ formConfigClock.formName }}" data-disable-history="true" class="form">
                <input type="hidden" class="text value timezone-offset" name="{{ formConfigClock.formName ~ "[" ~ formConfigClock.timezoneOffsetXpath ~ "]" }}" value="{{ formConfigClock.timezoneOffsetValue }}">
            </form>
        {% endif %}
        {% if formNewNodeClock is defined and formNewNodeClock is not null %}
            <form action="" method="post" name="{{ formNewNodeClock.formName }}" data-disable-history="true" class="form">
                <input type="hidden" class="text parent" name="{{ formNewNodeClock.parentNodeInputName }}" value="{{ formNewNodeClock.parentNode }}">
                <input type="hidden" class="text label" name="{{ formNewNodeClock.timezoneOffsetLabelInputName }}" value="{{ formNewNodeClock.timezoneOffsetLabel }}">
                <input type="hidden" class="text value timezone-offset" name="{{ formNewNodeClock.timezoneOffsetValueInputName }}" value="{{ formNewNodeClock.timezoneOffsetValue }}">
            </form>
        {% endif %}
    </div>
    
    <div class="timezones-map">
        {% for i in -11..13 %}
            <img src="{{ asset('bundles/fitmodulelinux/images/t' ~ i ~ '.png' ) }}" alt="{{ 'timezone' ~ i }}"  class="timezone-map timezone-offset-{{ i != 13 ? i*60 : '-660'}}" data-offset="{{ i != 13 ? i*60 : '-660'}}"/> 
        {% endfor %}
    </div>
</div>

